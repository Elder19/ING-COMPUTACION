@page
@model Tarea2.Pages.ConsultaResultados

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados de Consulta</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #8bd1dd;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }
        h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 10px; 
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px; 
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 8px; 
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Resultados de la Consulta</h1>

        @if (Model.consultaResultados.Count == 0)
        {
            <p>No se encontraron resultados.</p>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Género</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th>Dirección</th>
                        <th>Grupo Sanguíneo</th>
                        <th>Padecimientos</th>
                        <th>Intervenciones</th>
                        <th>Medicamentos</th>
                        <th>Fecha Última Cita</th>
                        <th>Cantidad Atenciones</th>
                        <th>Cantidad Procedimientos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.consultaResultados)
                    {
                        <tr>
                            <td>@item.CedulaP</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellidos</td>
                            <td>@(item.FechaNacimiento?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                            <td>@item.Genero</td>
                            <td>@item.Ntelefono</td>
                            <td>@item.CorreoE</td>
                            <td>@item.Direccion</td>
                            <td>@item.GrupoSanguineo</td>
                            <td>@item.CantidadPadecimientos</td>
                            <td>@item.Intervenciones</td>
                            <td>@item.CantidadMedicamentos</td>
                            <td>@(item.FechaUltimaCita?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                            <td>@item.CantidadAtenciones</td>
                            <td>@item.CantidadProcedimientos</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
