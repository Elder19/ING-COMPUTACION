@page
@model Tarea2.Pages.Consulta

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Fechas</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #8bd1dd;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }
        h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 10px; 
        }
        button {
            padding: 10px 15px; 
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem; 
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
        input[type="date"] {
            padding: 8px; 
            margin: 5px 0; 
            border-radius: 4px;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Ingrese las Fechas</h1>
        
        <form method="get" asp-page="ConsultaResultados">
            <label for="FechaInicio">Fecha de Inicio:</label>
            <input type="date" id="FechaInicio" asp-for="FechaInicio" required />
            <br />
            <label for="FechaFin">Fecha de Fin:</label>
            <input type="date" id="FechaFin" asp-for="FechaFin" required />
            <br />
            <button type="submit">Consultar</button>
        </form>
    </div>
</body>
</html>
